<% @events.each do |event| %>
  <section class="event">
    <div class="summary">
      <h2><%= link_to event.name, event_path(event) %></h2>
      <h3><%= display_date(event.event_start_date) %> in <%= event.location %></h3>
      <span class="price">
        <%= display_price(event) %>
      </span>
      <p>
        <%= truncate(event.description, length: 35, separator: ' ') %>
      </p>
    </div>
  </section>
<% end %>

<section class="admin">
  <%= link_to "Add new Event", new_event_path, class: "button" %>
</section>